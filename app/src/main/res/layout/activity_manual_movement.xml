<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:ignore="ButtonStyle"
    tools:context=".ManualMovement">

    <ImageButton
        android:id="@+id/buttonFW"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:src="@drawable/up_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:contentDescription="@string/moveF"
        android:layout_gravity="center"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/buttonLT"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:src="@drawable/left_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/LEFT" />

        <TextView
            android:id="@+id/mn_text"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_margin="5dp"
            android:text="@string/Manual"
            android:gravity="center"
            android:layout_gravity="center" />

        <ImageButton
            android:id="@+id/buttonRT"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:src="@drawable/right_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/RIGHT"/>
    </LinearLayout>

    <ImageButton
        android:id="@+id/buttonBW"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:src="@drawable/down_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/DOWN"
        android:layout_gravity="center"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/mn_buttonBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btnExit"
            android:layout_marginEnd="5dp"/>

        <Button
            android:id="@+id/mn_buttonConnect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/connect"
            android:layout_marginStart="5dp"/>
    </LinearLayout>
</LinearLayout>
